# =============================================================================
# Multi-LLM MCP Client Configuration
# Copy this file to .env and fill in your API keys
# =============================================================================

# MCP Server Configuration
MCP_SERVER_URL=https://mcp.insightfinder.com
HTTP_AUTH_METHOD=api_key
HTTP_API_KEY=your_mcp_server_api_key

# SSL Configuration
VERIFY_SSL=true
SSL_CERT_PATH=

# =============================================================================
# LLM API Keys - Add your API keys for the models you want to use
# =============================================================================

# OpenAI (ChatGPT)
OPENAI_API_KEY=your_openai_api_key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google (Gemini)
GOOGLE_API_KEY=your_google_api_key

# Ollama (Llama - local installation)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# VLLM
VLLM_BASE_URL=http://localhost:8000
VLLM_API_KEY=EMPTY

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# Chat Configuration
# =============================================================================

# Default LLM to use (chatgpt, claude, gemini, llama, deepseek)
DEFAULT_LLM=chatgpt

# Chat History
TRIM_HISTORY=6

# SSE Streaming
SSE_SHOW_PROGRESS=false

# Debug
ENABLE_DEBUG_MESSAGES=false


# =============================================================================
# Trace Server Configuration
# =============================================================================

# Traceloop/InsightFinder Trace Server Configuration
# Direct connection to InsightFinder trace server (bypassing OpenTelemetry Collector)
TRACE_SERVER_URL=http://127.0.0.1:4617
ENVIRONMENT=prod

# InsightFinder credentials for tracing (if different from above)
TRACE_INSIGHTFINDER_USER_NAME=if_username
TRACE_INSIGHTFINDER_LICENSE_KEY=if_licensekey
TRACE_INSIGHTFINDER_PROJECT=llm-chatbot-traces
TRACE_INSIGHTFINDER_SYSTEM_NAME=llm-client-system